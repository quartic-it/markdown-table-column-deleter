{
  "name": "markdown-table-column-deleter",
  "displayName": "Markdown Table Column Deleter",
  "description": "Delete the current selected column in a Markdown table",
  "version": "1.0.0",
  "publisher": "quartic-it",
    "repository": {
      "type": "git",
      "url": "https://github.com/quartic-it/markdown-table-column-deleter.git"
    },
  "engines": {
    "vscode": "^1.54.0"
  },
  "icon": "media/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
        {
            "command": "markdown-table.deleteColumn",
            "title": "Delete Column in Markdown Table"
        }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markdown-column-deleter",
          "title": "Markdown Column Deleter",
          "icon": "media/icon.png"
        }
      ]
    },
    "problemMatchers": [
      {
        "name": "esbuild",
        "owner": "typescript",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^\\s*(\\S.*):(\\d+):(\\d+):\\s+(error|warning|info):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
